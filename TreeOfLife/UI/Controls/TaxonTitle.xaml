<UserControl x:Class="TreeOfLife.UI.Controls.TaxonTitle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TreeOfLife.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textBlock_RankName" Text="RankName" VerticalAlignment="Center" FontSize="14"/>
        <Border x:Name="border_Split" Grid.Column="1" BorderThickness="1" Width="2" Margin="5,0,5,0" SnapsToDevicePixels="True"/>
        <TextBlock x:Name="textBlock_TaxonName" Grid.Column="2" Text="TaxonName" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
