<UserControl x:Class="TreeOfLife.UI.Controls.TaxonButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TreeOfLife.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <DockPanel>
            <Border x:Name="border_RankName" CornerRadius="3,0,0,3" SnapsToDevicePixels="True">
                <TextBlock x:Name="textBlock_RankName" Text="RankName" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="6,3,6,3" FontFamily="{Binding FontFamily, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:TaxonButton}}}" FontSize="{Binding FontSize, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:TaxonButton}}}" FontStretch="{Binding FontStretch, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:TaxonButton}}}" TextTrimming="CharacterEllipsis"/>
            </Border>
            <Border x:Name="border_TaxonName" BorderThickness="0,1,1,1" CornerRadius="0,3,3,0" SnapsToDevicePixels="True">
                <DockPanel Margin="6,3,6,3">
                    <Grid x:Name="grid_ref" DockPanel.Dock="Right" Width="6" Height="10" Margin="6,0,0,0">
                        <Path Data="M 2,0 C 0,2 0,2 1,3" Stretch="Uniform" Stroke="#808080" StrokeThickness="1" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                        <Border BorderThickness="1" Width="5" Height="1" BorderBrush="#808080" HorizontalAlignment="Right" VerticalAlignment="Top" SnapsToDevicePixels="True"/>
                        <Border BorderThickness="1" Width="1" Height="5" BorderBrush="#808080" HorizontalAlignment="Right" VerticalAlignment="Top" SnapsToDevicePixels="True"/>
                    </Grid>
                    <Grid>
                        <TextBlock x:Name="textBlock_TaxonName" Text="TaxonName" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{Binding FontFamily, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:TaxonButton}}}" FontSize="{Binding FontSize, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:TaxonButton}}}" FontStretch="{Binding FontStretch, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:TaxonButton}}}" TextTrimming="CharacterEllipsis"/>
                    </Grid>
                </DockPanel>
            </Border>
        </DockPanel>
    </Grid>
</UserControl>
