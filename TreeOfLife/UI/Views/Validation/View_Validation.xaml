<UserControl x:Class="TreeOfLife.UI.Views.View_Validation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TreeOfLife.UI.Views"
             xmlns:Controls="clr-namespace:TreeOfLife.UI.Controls"  
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <UserControl.DataContext>
        <local:ViewModel_Validation/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Margin="40,25,40,0" Height="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <Label Style="{DynamicResource LabelStyle}" Content="不合规项:"/>
            <Button x:Name="button_Validate" Grid.Column="2" Style="{DynamicResource ButtonStyle}" Content="开始校对"/>
        </Grid>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,15,40,25">
                <Grid x:Name="grid_ValidateResult_Empty" Margin="0,25,0,0">
                    <Label Style="{DynamicResource VerticalTitleLabelStyle}" Content="无不合规项"/>
                </Grid>
                <StackPanel x:Name="stackPanel_ValidateResult"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
