<UserControl x:Class="TreeOfLife.Views.Search.View_Search"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TreeOfLife.Views.Search"
             xmlns:Controls="clr-namespace:TreeOfLife.Controls"  
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <UserControl.DataContext>
        <local:ViewModel_Search/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid x:Name="grid_Name" Margin="25,25,25,0" Height="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="75"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="textBox_Search" Text="{Binding KeyWord, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource TextBoxStyle}"/>
            <Button x:Name="button_Search" Grid.Column="2" Content="检索" Style="{DynamicResource ButtonStyle}"/>
        </Grid>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="25,15,25,25">
                <Grid x:Name="grid_SearchResult_Empty" Margin="0,25,0,0">
                    <Label Content="无结果" Style="{DynamicResource VerticalTitleLabelStyle}"/>
                </Grid>
                <Grid x:Name="grid_SearchResult_Perfect" Margin="0,25,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="10"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Content="最相关结果" Style="{DynamicResource VerticalTitleLabelStyle}"/>
                    <Controls:TaxonNameButtonGroup x:Name="taxonNameButtonGroup_SearchResult_Perfect" Grid.Row="2"/>
                </Grid>
                <Grid x:Name="grid_SearchResult_High" Margin="0,25,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="10"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Label Content="较相关结果" Style="{DynamicResource VerticalTitleLabelStyle}"/>
                        <Button x:Name="button_ExpandHigh" Content="展开" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,2" Padding="6,3,6,3" Style="{DynamicResource TransparentButtonStyle}"/>
                    </Grid>
                    <Controls:TaxonNameButtonGroup x:Name="taxonNameButtonGroup_SearchResult_High" Grid.Row="2"/>
                </Grid>
                <Grid x:Name="grid_SearchResult_Low" Margin="0,25,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="10"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Label Content="次相关结果" Style="{DynamicResource VerticalTitleLabelStyle}"/>
                        <Button x:Name="button_ExpandLow" Content="展开" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,2" Padding="6,3,6,3" Style="{DynamicResource TransparentButtonStyle}"/>
                    </Grid>
                    <Controls:TaxonNameButtonGroup x:Name="taxonNameButtonGroup_SearchResult_Low" Grid.Row="2"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
