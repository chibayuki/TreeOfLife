<UserControl x:Class="TreeOfLife.Views.File.View_File"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TreeOfLife.Views.File"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <UserControl.DataContext>
        <local:ViewModel_File/>
    </UserControl.DataContext>
    <Grid>
        <Button x:Name="button_Open" Content="打开" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,25,0,0" />
        <Button x:Name="button_Save" Content="保存" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,60,0,0" />
        <Button x:Name="button_SaveAs" Content="另存为" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,95,0,0" />
        <Button x:Name="button_Close" Content="关闭" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,130,0,0" />
        <Label Content="{Binding CreationTimeString}" HorizontalAlignment="Left" Margin="25,175,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding ModificationTimeString}" HorizontalAlignment="Left" Margin="25,205,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
