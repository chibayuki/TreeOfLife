<UserControl x:Class="TreeOfLife.Views.Tree.View_Tree"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TreeOfLife.Views.Tree"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:ViewModel_Tree/>
    </UserControl.DataContext>
    <Grid>
        <TextBox x:Name="textBox_EvoTree" Padding="3,3,3,3" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" IsReadOnly="True" HorizontalScrollBarVisibility="Auto" Background="{Binding TreeText_BackGround}" Foreground="{Binding TreeText_ForeGround}" SelectionBrush="{Binding TreeText_Selection}" SelectionTextBrush="{Binding TreeText_SelectionText}" Text="{Binding TreeText}" />

    </Grid>
</UserControl>
