<UserControl x:Class="TreeOfLife.Views.Tree.View_Tree"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TreeOfLife.Views.Tree"
             xmlns:Controls="clr-namespace:TreeOfLife.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:ViewModel_Tree/>
    </UserControl.DataContext>
    <Grid Background="{Binding Tree_BackGround}">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Controls:Tree x:Name="tree" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </ScrollViewer>
    </Grid>
</UserControl>
