<UserControl x:Class="TreeOfLife.Views.About.View_About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TreeOfLife.Views.About"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <UserControl.DataContext>
        <local:ViewModel_About/>
    </UserControl.DataContext>
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="25,25,25,25">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="128" Height="128" Source="{Binding AppLogo_256, Mode=OneWay}"/>
                        <StackPanel Margin="20,10,0,10" VerticalAlignment="Center">
                            <Label Content="Tree of Life" FontSize="24"/>
                            <Label Content="1.0 Milestone 11" FontSize="16"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
