<UserControl x:Class="TreeOfLife.Controls.TreeNodeButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TreeOfLife.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Grid x:Name="grid_LeftPart">
                <Grid x:Name="grid_Single">
                    <Label Width="25" Height="1" Background="Gray" VerticalAlignment="Center" Grid.Row="0" Grid.RowSpan="2"/>
                </Grid>
                <Grid x:Name="grid_First">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Width="25" Height="1" Background="Gray" VerticalAlignment="Center" Grid.Row="0" Grid.RowSpan="2"/>
                    <Label Width="1" Background="Gray" VerticalAlignment="Stretch" HorizontalAlignment="Left" Grid.Row="1"/>
                </Grid>
                <Grid x:Name="grid_Last">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Width="25" Height="1" Background="Gray" VerticalAlignment="Center" Grid.Row="0" Grid.RowSpan="2"/>
                    <Label Width="1" Background="Gray" VerticalAlignment="Stretch" HorizontalAlignment="Left" Grid.Row="0"/>
                </Grid>
                <Grid x:Name="grid_Normal">
                    <Label Width="25" Height="1" Background="Gray" VerticalAlignment="Center" Grid.Row="1"/>
                    <Label Width="1" Background="Gray" VerticalAlignment="Stretch" HorizontalAlignment="Left" Grid.Row="1"/>
                </Grid>
            </Grid>
            <Grid x:Name="grid_MiddlePart">
                <Label x:Name="label_TaxonName" Content="TaxonName" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="6,3,6,3" />
            </Grid>
            <Grid x:Name="grid_RightPart">
                <Label Width="25" Height="1" Background="Gray" VerticalAlignment="Center" Grid.Row="1"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
