<UserControl x:Class="TreeOfLife.Controls.CategorySelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TreeOfLife.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Grid x:Name="grid_Level1" HorizontalAlignment="Stretch" VerticalAlignment="Top" />
            <Grid x:Name="grid_Level2" HorizontalAlignment="Stretch" VerticalAlignment="Top" >
                <Label VerticalAlignment="Top" Height="2" Background="#7F808080" />
            </Grid>
            <Grid x:Name="grid_Level3" HorizontalAlignment="Stretch" VerticalAlignment="Top" >
                <Label VerticalAlignment="Top" Height="2" Background="#7F808080" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
