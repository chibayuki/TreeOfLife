<UserControl x:Class="TreeOfLife.Controls.CategorySelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TreeOfLife.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel x:Name="stackPanel_Levels">
            <Grid x:Name="grid_Level1"/>
            <StackPanel x:Name="stackPanel_Level2">
                <Border x:Name="border_Level2" BorderThickness="1" Height="1" Margin="0,6,0,6" BorderBrush="#80808080" SnapsToDevicePixels="True"/>
                <Grid x:Name="grid_Level2"/>
            </StackPanel>
            <StackPanel x:Name="stackPanel_Level3">
                <Border x:Name="border_Level3" BorderThickness="1" Height="1" Margin="0,6,0,6" BorderBrush="#80808080" SnapsToDevicePixels="True"/>
                <Grid x:Name="grid_Level3"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
