<UserControl x:Class="TreeOfLife.UI.Controls.PolyphylySymbol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TreeOfLife.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="8" d:DesignWidth="8"
             Foreground="#FF808080">
    <Grid>
        <Grid Width="8" Height="8">
            <Path x:Name="path_Polyphyly" Data="M 1,0 0,1.732 2,1.732 z" Stretch="Uniform" Stroke="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:PolyphylySymbol}}}" StrokeThickness="1" Margin="0.5"/>
        </Grid>
    </Grid>
</UserControl>