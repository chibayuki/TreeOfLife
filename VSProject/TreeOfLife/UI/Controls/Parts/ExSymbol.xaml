<UserControl x:Class="TreeOfLife.UI.Controls.ExSymbol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TreeOfLife.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="11" d:DesignWidth="8"
             Foreground="#FF808080">
    <Grid>
        <Grid Width="8" Height="11">
            <Border x:Name="border_Ex_Part1" Height="2" BorderThickness="1" BorderBrush="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:ExSymbol}}}" VerticalAlignment="Top" Margin="0,3,0,0" SnapsToDevicePixels="True"/>
            <Border x:Name="border_Ex_Part2" Width="2" BorderThickness="1" BorderBrush="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:ExSymbol}}}" SnapsToDevicePixels="True"/>
        </Grid>
    </Grid>
</UserControl>